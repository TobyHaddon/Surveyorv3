<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Surveyor.User_Controls.SettingsSurveyRules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls" 
    xmlns:local="using:Surveyor.User_Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- RANGE RULE -->
        <StackPanel Grid.Row="0">
            <toolkit:SettingsCard>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="525" />
                        <ColumnDefinition Width="525" />
                    </Grid.ColumnDefinitions>
                                   
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Range Rule Active" VerticalAlignment="Center" HorizontalAlignment="left"/>
                    <ToggleSwitch Grid.Row="0" Grid.Column="1" IsOn="{x:Bind surveyRules.RangeRuleActive, Mode=TwoWay}" HorizontalAlignment="Right"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Range Min: " VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBox Text="{x:Bind surveyRules.RangeMin, Mode=TwoWay}" Width="20" TextChanging="NumberTextBoxPositiveDecimal2DP_TextChanging"/>
                        <TextBlock Text="m" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Range Max: " VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                        <TextBox Text="{x:Bind surveyRules.RangeMax, Mode=TwoWay}" Width="20" TextChanging="NumberTextBoxPositiveDecimal2DP_TextChanging"/>
                        <TextBlock Text="m" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </toolkit:SettingsCard>
        </StackPanel>

        <!-- RMS RULE -->
        <StackPanel  Grid.Row="1" Spacing="16">
             <toolkit:SettingsCard>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="525" />
                        <ColumnDefinition Width="525" />
                    </Grid.ColumnDefinitions>
                                        
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="RMS Rule Active" VerticalAlignment="Center" HorizontalAlignment="left"/>
                    <ToggleSwitch Grid.Row="0" Grid.Column="1" IsOn="{x:Bind surveyRules.RMSRuleActive, Mode=TwoWay}" HorizontalAlignment="Right"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="RMS Max: " VerticalAlignment="Center"/>

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal"   HorizontalAlignment="Right">
                        <TextBox Text="{x:Bind surveyRules.RMSMax, Mode=TwoWay}" Width="50" TextChanging="NumberTextBoxPositiveWholeNumber_TextChanging"/>
                        <TextBlock Text="mm" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </toolkit:SettingsCard>
        </StackPanel>

        <!-- HORIZONTAL RANGE RULE -->
        <StackPanel  Grid.Row="2" Spacing="16">
            <toolkit:SettingsCard>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="525" />
                        <ColumnDefinition Width="525" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Horizontal Range Rule Active" VerticalAlignment="Center" HorizontalAlignment="left"/>
                    <ToggleSwitch Grid.Row="0" Grid.Column="1" IsOn="{x:Bind surveyRules.HorizontalRangeRuleActive, Mode=TwoWay}" HorizontalAlignment="Right"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Horizontal Range Left: " VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal"   HorizontalAlignment="Right">
                        <TextBox Text="{x:Bind surveyRules.HorizontalRangeLeft, Mode=TwoWay}" Width="50" TextChanging="NumberTextBoxPositiveDecimal2DP_TextChanging"/>
                        <TextBlock Text="m" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Horizontal Range Right: " VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal"   HorizontalAlignment="Right">
                        <TextBox Text="{x:Bind surveyRules.HorizontalRangeRight, Mode=TwoWay}" Width="50" TextChanging="NumberTextBoxPositiveDecimal2DP_TextChanging"/>
                        <TextBlock Text="m" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </toolkit:SettingsCard>
        </StackPanel>

        <!-- VERTICAL RANGE RULE -->
        <StackPanel  Grid.Row="3" Spacing="16">
            <toolkit:SettingsCard>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="525" />
                        <ColumnDefinition Width="525" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Vertical Range Rule Active" VerticalAlignment="Center" HorizontalAlignment="left"/>
                    <ToggleSwitch Grid.Row="0" Grid.Column="1" IsOn="{x:Bind surveyRules.VerticalRangeRuleActive, Mode=TwoWay}" HorizontalAlignment="Right"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Vertical Range Top: " VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                        <TextBox Text="{x:Bind surveyRules.VerticalRangeTop, Mode=TwoWay}" Width="50" TextChanging="NumberTextBoxPositiveDecimal2DP_TextChanging"/>
                        <TextBlock Text="m" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Vertical Range Bottom: " VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                        <TextBox Text="{x:Bind surveyRules.VerticalRangeBottom, Mode=TwoWay}" Width="50" TextChanging="NumberTextBoxPositiveDecimal2DP_TextChanging"/>
                        <TextBlock Text="m" VerticalAlignment="Center"/>
                    </StackPanel>
            
                </Grid>
            </toolkit:SettingsCard>
        </StackPanel>
    </Grid>
</UserControl>
