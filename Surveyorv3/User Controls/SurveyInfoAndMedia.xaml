    <Grid>
        <StackPanel>
            <!--Survey code-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,8,0,0">
                <TextBox x:Name="SurveyCode" Width="350" PlaceholderText="[ReefCode]-[Depth]-[TransetNo]-[YYYY-MM-DD]" HorizontalAlignment="Left" TextChanged="SurveyCode_TextChanged"/>
                <FontIcon x:Name="SurveyCodeValidationGlyph" FontSize="16" VerticalAlignment="Center" Margin="8,0,0,0"/>
                <TextBlock x:Name="SurveyCodeValidationText"  VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <!--Survey Depth-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,8,0,0">
                <ComboBox x:Name="SurveyDepth" Width="250" IsEditable="True" PlaceholderText="Survey depth"             
                        SelectionChanged="SurveyDepth_SelectionChanged">
                    <ComboBoxItem Content="5" />
                    <ComboBoxItem Content="6" />
                    <ComboBoxItem Content="7" />
                    <ComboBoxItem Content="8" />
                    <ComboBoxItem Content="9" />
                    <ComboBoxItem Content="10" />
                    <ComboBoxItem Content="11" />
                    <ComboBoxItem Content="12" />
                    <ComboBoxItem Content="13" />
                    <ComboBoxItem Content="14" />
                    <ComboBoxItem Content="15" />
                    <ComboBoxItem Content="Flat" />
                    <ComboBoxItem Content="Crest" />
                    <ComboBoxItem Content="Slope" />
                </ComboBox>
                <FontIcon x:Name="SurveyDepthValidationGlyph" FontSize="16" VerticalAlignment="Center"  Margin="8,0,0,0"/>
                <TextBlock x:Name="SurveyDepthValidationText"  VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <!--Survey Analyst Name-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,8,0,0">
                <TextBox x:Name="SurveyAnalystName" Width="250" PlaceholderText="Your Name" HorizontalAlignment="Left" TextChanged="SurveyAnalystName_TextChanged" />
                <FontIcon x:Name="SurveyAnalystNameValidationGlyph" FontSize="16" VerticalAlignment="Center"  Margin="8,0,0,0"/>
                <TextBlock x:Name="SurveyAnalystNameValidationText"  VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <!--Left Camera Media Files-->
                <ListView x:Name="LeftMediaFileNames" ItemsSource="{x:Bind LeftMediaFileItemList}" ItemTemplate="{StaticResource MediaFileTemplate}"
                         Height="300" MinWidth="300" MaxHeight="300"
                         BorderThickness="1" BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}" Margin="0,0,10,0"/>

                <!--Media Left/Right Swap and Order Controls-->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Button Click="MoveItemUp_Click" Margin="0,0,0,10">
                        <Button.Content>
                            <FontIcon Glyph="&#xE96D;" FontSize="12" FontFamily="Segoe MDL2 Assets" />
                        </Button.Content>
                    </Button>
                    <Button Click="MoveItemDown_Click" Margin="0,0,0,10">
                        <Button.Content>
                            <FontIcon Glyph="&#xE96E;" FontSize="12" FontFamily="Segoe MDL2 Assets" />
                        </Button.Content>
                    </Button>
                    <Button Click="MoveItemAcrossLeft_Click" Margin="0,0,0,10">
                        <Button.Content>
                            <FontIcon Glyph="&#xE96F;" FontSize="12" FontFamily="Segoe MDL2 Assets" />
                        </Button.Content>
                    </Button>
                    <Button Click="MoveItemAcrossRight_Click" Margin="0,0,0,10">
                        <Button.Content>
                            <FontIcon Glyph="&#xE970;" FontSize="12" FontFamily="Segoe MDL2 Assets" />
                        </Button.Content>
                    </Button>
                    <Button Click="DeleteItem_Click" Margin="0,0,0,10">
                        <Button.Content>
                            <FontIcon Glyph="&#xE74D;" FontSize="12" FontFamily="Segoe MDL2 Assets" />
                        </Button.Content>
                    </Button>
                    <Button Click="AddItem_Click">
                        <Button.Content>
                            <FontIcon Glyph="&#xED25;" FontSize="12" FontFamily="Segoe MDL2 Assets" />
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!--Right Camera Media Files-->
                <ListView x:Name="RightMediaFileNames" ItemsSource="{x:Bind RightMediaFileItemList}" ItemTemplate="{StaticResource MediaFileTemplate}"
                         Height="300" MinWidth="300" MaxHeight="300" 
                         BorderThickness="1" BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}"/>

            </StackPanel>

            <!--Survey Media Files Same Path-->
            <StackPanel x:Name="SurveyMediaPathPanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,8,0,0">
                <FontIcon x:Name="SurveyMediaPathGlyph" FontSize="16" VerticalAlignment="Center"  Margin="8,0,0,0"/>
                <TextBlock x:Name="SurveyMediaPathValidationText" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <!--Survey Media Same Date-->
            <StackPanel x:Name="SurveyMediaDatePanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,8,0,0">
                <FontIcon x:Name="SurveyMediaDateGlyph" FontSize="16" VerticalAlignment="Center"  Margin="8,0,0,0"/>
                <TextBlock x:Name="SurveyMediaDateValidationText" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <!--Survey Media Files From Same GoPro-->
            <StackPanel x:Name="SurveyGoProMatchPanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,8,0,0">
                <FontIcon x:Name="SurveyGoProMatchGlyph" FontSize="16" VerticalAlignment="Center"  Margin="8,0,0,0"/>
                <TextBlock x:Name="SurveyGoProMatchValidationText" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <!--Survey Media Contiguous-->
            <StackPanel  x:Name="SurveyMediaContiguousPanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0,8,0,0">
                <FontIcon x:Name="SurveyMediaContiguousGlyph" FontSize="16" VerticalAlignment="Center"  Margin="8,0,0,0"/>
                <TextBlock x:Name="SurveyMediaContiguousValidationText" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
