    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <UserControl.Resources>
        <DataTemplate x:Key="MediaFileTemplate" x:DataType="local:MediaFileItem">
            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Thumbnail -->
                <!--<Image Source="{x:Bind MediaFileThumbnail}" Grid.Column="0" Width="100" Height="100" Margin="0,0,10,0" />-->

                <!-- Text Details -->
                <StackPanel Grid.Column="1">
                    <!-- File Name FontSize="16" FontWeight="Bold" -->
                    <TextBlock Text="{x:Bind MediaFileName}" TextTrimming="CharacterEllipsis"  Style="{ThemeResource BaseTextBlockStyle}" />

                    <!-- Creation Date -->
                    <!--<StackPanel Orientation="Horizontal">
                        <TextBlock Text="Created: " FontSize="14" />
                        <TextBlock Text="{x:Bind MediaFileCreateDateTime, Converter={StaticResource SurveyDateTimeToStringConverter}, ConverterParameter='dd MMM yyyy HH:mm:ss'}" FontSize="14" />
                    </StackPanel>-->
                    
                    <!-- Duration -->
                    <!--<StackPanel Orientation="Horizontal"  Visibility="{x:Bind MediaFileDuration, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="Duration: " FontSize="14" />
                        <TextBlock Text="{x:Bind MediaFileDuration, Converter={StaticResource SurveyTimeSpanToStringConverter}, ConverterParameter='hh:mm:ss'}" FontSize="14" />
                    </StackPanel>-->
                    
                    <!--GoPro Serial Number-->
                    <!--<StackPanel Orientation="Horizontal">
                        <TextBlock Text="GoPro S/N: " FontSize="14" />
                        <TextBlock Text="{x:Bind GoProSerialNumber}" FontSize="14" Style="{ThemeResource CaptionTextBlockStyle}"/>
                    </StackPanel>-->
                </StackPanel>
            </Grid>
        </DataTemplate>

        <!--<local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />-->
        
    </UserControl.Resources>

